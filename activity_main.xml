<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="215dp"
        android:text="Enter Mobile Number"
        android:textColor="#0D1BED"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="112dp"
        android:layout_height="145dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        app:srcCompat="@drawable/Screenshot_20230116_040127" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginStart="90dp"
        android:layout_marginTop="5dp"
        android:text="Linked to your bank account"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="231dp" />


    <EditText
        android:id="@+id/editTextView"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_below="@+id/textView2"
        android:layout_marginStart="60dp"
        android:layout_marginTop="62dp"
        android:background="@color/grey"
        android:hint="   Mobile Number"
        android:paddingTop="2dp"
        android:textSize="10dp"
        tools:ignore="UnknownId"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="268dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="35dp"
        android:layout_height="35dp"

        android:layout_below="@+id/textView2"
        android:layout_marginStart="25dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/grey"
        android:gravity="center"
        android:text="+91"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black"
        android:textSize="10dp"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="268dp" />

    <RadioButton
        android:id="@+id/radioButton"
        style="@style/Widget.AppCompat.CompoundButton.RadioButton"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextView"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:text="I agree to Terms of use and Privacy Policy of OneScore and CIBIL"
        app:useMaterialThemeColors="true" />


    <com.borjabravo.readmoretextview.ReadMoreTextView
        android:id="@+id/brtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="35dp"
        android:text="I agree to OneScore's Terms of Use and Privacy Policy and authorise to communicate via SMS, Email and WhatsApp. I hereby request for a copy of my Credit Information and/or aggregates on my registered email id or through my OneScore account, and
authorise Experian and CIBIL to also provide the same to FPL Technologies Private Limited,on my behalf."
        app:colorClickableText="#0D1BED"
        app:showTrimExpandedText="true"
        app:trimCollapsedText="@string/read_less"
        app:trimExpandedText="@string/read_more"
        app:trimLength="380"
        app:trimMode="trimModeLength"></com.borjabravo.readmoretextview.ReadMoreTextView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/brtxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Score Powered by"
        android:textColor="@color/grey" />

    <Button
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Get OTP"
        android:textColor="#616A6B"
        app:backgroundTint="@color/grey" />


</RelativeLayout>